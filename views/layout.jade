doctype html
html
  head
    meta(name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1, maximum-scale=1, user-scalable=0")
    link(rel='stylesheet' href='/stylesheets/bgn.css')
    link(rel='stylesheet' href='/stylesheets/jquery.mobile.icons.min.css')
    script(src='//code.jquery.com/jquery-1.8.3.min.js')
    script(src='//code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/index.js')
  
  body
    div(data-role='page' data-theme='a')
    
      div#header(data-role='header' data-theme='a')
          input(href='/game/chat' type='image' src='/images/chat.png' style='position: fixed; right: 0.5%;top: 0.5%')
          

          
      div#content(data-role='content' data-theme='a' style='position: fixed; left:0 ;top: 45px ; bottom: 45px;color: #2b9904;text-align: left; backround-color: black; min-width: 100%')

        block content
        
      div#footer(data-role='footer' data-position='fixed' data-theme='a')
        div(data-type='horizontal', data-role='controlgroup' style='margin-left: auto; margin-right: auto; text-align: center')

          a(data-theme='none', data-shadow='false' href='/game')
            img(src='/images/network.png' style='position: relative; padding:7px')

          a(data-theme='none', data-shadow='false' href='/game/bank')
            img(src='/images/bank.png' style='position: relative;padding:7px')

          a(data-theme='none', data-shadow='false' href='/')
            img(src='/images/mail.png' style='position: relative;padding:7px')

          a(data-theme='none', data-shadow='false' href='/game/market')
            img(src='/images/file.png' style='position: relative;padding:7px')

          a(data-theme='none', data-shadow='false' href='/game/hdd')
            img(src='/images/home.png' style='position: relative;padding:7px')

